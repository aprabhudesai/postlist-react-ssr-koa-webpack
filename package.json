{
  "name": "fbt-streaming-demo",
  "version": "1.0.0",
  "description": "Demo showing FBT integrated with HTML streaming",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-server & npm run build-client",
    "build-server": "webpack --env.platform=server",
    "build-client": "webpack --env.platform=web",
    "clean": "npm run clean:dist-js; npm run clean:dist-css; npm run clean:fbt;",
    "clean:dist-js": "rm -rf './dist/js'",
    "clean:dist-css": "rm -f './dist/main.css'",
    "clean:fbt": "rm -rf './.fbt'; rm -f translation_input.json",
    "build:fbt": "npm run fbt:manifest; npm run fbt:collect; npm run fbt:translate",
    "fbt:manifest": "mkdir -p .fbt && node ./node_modules/babel-plugin-fbt/bin/manifest --src src --enum-manifest .fbt/enum_manifest.json --src-manifest .fbt/src_manifest.json",
    "fbt:collect": "node ./node_modules/babel-plugin-fbt/bin/collectFBT --pretty --manifest < .fbt/src_manifest.json > .fbt/source_strings.json",
    "fbt-generate-translations": "node node_modules/fbt-generate-translations/index --src .fbt/source_strings.json --locales src/i18n/locales.js",
    "fbt:translate": "node ./node_modules/babel-plugin-fbt/bin/translate.js --pretty --translations src/i18n/translations/*.json --jenkins --source-strings .fbt/source_strings.json > src/i18n/translatedFbts.json",
    "manifest": "node ./node_modules/babel-plugin-fbt/bin/manifest --src src",
    "collect-fbts": "node ./node_modules/babel-plugin-fbt/bin/collectFBT --pretty --manifest < .src_manifest.json > .source_strings.json",
    "translate-fbts": "node ./node_modules/babel-plugin-fbt/bin/translate.js --translations src/i18n/translations/*.json --jenkins > src/i18n/translatedFbts.json",
    "watch-server": "nodemon ./dist/js/server.js"
  },
  "author": "Abhishek Prabhudesai",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "babel-plugin-fbt-runtime": "^0.9.4",
    "fbt": "^0.10.2",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^8.0.8",
    "koa-static": "^5.0.0",
    "multistream": "^3.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "string-to-stream": "^3.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/register": "^7.9.0",
    "@types/koa": "^2.11.3",
    "@types/koa-router": "^7.4.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-fbt": "^0.10.4",
    "css-loader": "^3.5.2",
    "file-loader": "^6.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.3",
    "style-loader": "^1.1.4",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  }
}
